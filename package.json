{
  "name": "firebuzz",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "pnpm biome format . --write && pnpm biome check . --apply",
    "clean": "turbo clean && rm -rf .turbo node_modules",
    "ui": "pnpm --filter @firebuzz/ui ui"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "turbo": "^2.4.1",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
